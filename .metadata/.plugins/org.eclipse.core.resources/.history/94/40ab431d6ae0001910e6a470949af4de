package conversionservlet;
import java.io.*;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.ServletException;
import org.osgi.util.measurement.Measurement;

public class ConversionServlet extends HttpServlet {
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) 
			throws ServletException, IOException {
				resp.setContentType("text/plain");
				resp.getWriter().write("Input value: ");
				resp.getWriter().write("\nInput unit: ");
				resp.getWriter().write("\nInput wanted unit: ");
	}
	
	double Converter(double value, String unit) {
		Measurement measurement = new Measurement(System.currentTimeMillis());
		return 0.2;
	}
	
}
